
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed == true %>
  <p> <%= check_box "task", "completed" %> This task is completed </p>
<% else %>
  <p> <%= check_box "task", "completed" %> This task is not completed yet</p>
<% end %>

<%= link_to 'Back to list', tasks_path  %>
